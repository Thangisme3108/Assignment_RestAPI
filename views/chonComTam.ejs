    <input type="text" id="ten" name="mon" placeholder="Nhập tên món" required>

    <label for="gia">Giá:</label>
    <input type="number" id="gia" name="price" placeholder="Nhập giá món" required>

    <label for="anh">Tải lên ảnh:</label>
    <input type="file" id="anh" name="picture" accept="image/*" required>

    <button type="submit">Gửi</button>
</form>

